{
  "name": "base",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "pnpm migration:run && pnpm seed:run && node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,tsx,js}\" --max-warnings=0",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.{ts,tsx,js}\" --fix",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand --passWithNoTests --testPathPattern=unit",
    "test:int": "jest --runInBand --passWithNoTests --testPathPattern=integration",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/shared/infrastructure/database/data-source.ts",
    "migration:generate": "pnpm typeorm migration:generate src/shared/infrastructure/database/migrations/InitSchema",
    "migration:run": "pnpm typeorm migration:run",
    "migration:revert": "pnpm typeorm migration:revert",
    "prepare": "husky",
    "seed:run": "node dist/shared/infrastructure/database/seeds/run-seeds.js",
    "typeorm:local": "node --env-file=.env -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/shared/infrastructure/database/data-source.ts",
    "migration:run:local": "pnpm typeorm:local migration:run",
    "migration:revert:local": "pnpm typeorm:local migration:revert",
    "migration:generate:local": "pnpm typeorm:local migration:generate src/shared/infrastructure/database/migrations/InitSchema",
    "seed:local": "node --env-file=.env -r ts-node/register -r tsconfig-paths/register src/shared/infrastructure/database/seeds/run-seeds.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nestjs-pino": "^4.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.7.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "29.5.1",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.0.0",
    "jest": "29.5.0",
    "lint-staged": "^16.2.5",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
